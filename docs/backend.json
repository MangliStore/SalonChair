
{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the Salon Chair app.",
      "properties": {
        "id": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "name": { "type": "string" },
        "isSalonOwner": { "type": "boolean" },
        "registrationDateTime": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "email", "isSalonOwner"]
    },
    "Salon": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Salon",
      "type": "object",
      "description": "Represents a salon listed on the platform.",
      "properties": {
        "id": { "type": "string" },
        "ownerId": { "type": "string" },
        "ownerName": { "type": "string" },
        "ownerEmail": { "type": "string" },
        "name": { "type": "string" },
        "city": { "type": "string" },
        "state": { "type": "string" },
        "imageUrl": { "type": "string" },
        "isAuthorized": { "type": "boolean" },
        "isPaid": { "type": "boolean" }
      }
    },
    "Booking": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Booking",
      "type": "object",
      "description": "Represents an appointment request.",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "salonId": { "type": "string" },
        "salonOwnerId": { "type": "string" },
        "status": { "type": "string" }
      }
    },
    "Message": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Message",
      "type": "object",
      "description": "A chat message between a user and a salon owner regarding a specific booking.",
      "properties": {
        "id": { "type": "string" },
        "bookingId": { "type": "string" },
        "senderId": { "type": "string" },
        "senderName": { "type": "string" },
        "text": { "type": "string" },
        "timestamp": { "type": "object" }
      },
      "required": ["bookingId", "senderId", "text", "timestamp"]
    }
  },
  "auth": {
    "providers": ["google.com"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": { "entityName": "User" }
      },
      {
        "path": "/salons/{salonId}",
        "definition": { "entityName": "Salon" }
      },
      {
        "path": "/bookings/{bookingId}",
        "definition": { "entityName": "Booking" }
      },
      {
        "path": "/bookings/{bookingId}/messages/{messageId}",
        "definition": { "entityName": "Message" }
      }
    ]
  }
}
