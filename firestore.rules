
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }
    function isAdmin() { 
      return isSignedIn() && request.auth.token.email == 'citimobilesknr@gmail.com'; 
    }
    
    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if isAdmin();
      allow create, update: if isSignedIn() && (request.auth.uid == userId || isAdmin());
    }

    match /salons/{salonId} {
      allow read: if true;
      allow write: if isSignedIn();
      allow update: if isAdmin();
    }

    match /bookings/{bookingId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (
        resource.data.userId == request.auth.uid || 
        resource.data.salonOwnerId == request.auth.uid ||
        isAdmin()
      );

      match /messages/{messageId} {
        // Only allow parties involved in the booking or admin to chat
        allow read, write: if isSignedIn() && (
          get(/databases/$(database)/documents/bookings/$(bookingId)).data.userId == request.auth.uid ||
          get(/databases/$(database)/documents/bookings/$(bookingId)).data.salonOwnerId == request.auth.uid ||
          isAdmin()
        );
      }
    }
  }
}
