rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Global helpers
    function isSignedIn() { return request.auth != null; }
    function isAdmin() { return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid)); }

    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if isAdmin();
      allow create, update: if isSignedIn() && request.auth.uid == userId;
      allow delete: if isAdmin();
    }

    match /admins/{adminId} {
      allow get: if isSignedIn() && request.auth.uid == adminId;
    }

    match /salons/{salonId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if isAdmin() || (isSignedIn() && resource.data.ownerId == request.auth.uid);

      match /services/{serviceId} {
        allow get, list: if true;
        allow create, update, delete: if isAdmin() || (isSignedIn() && get(/databases/$(database)/documents/salons/$(salonId)).data.ownerId == request.auth.uid);
      }

      match /subscriptions/{subscriptionId} {
        allow read: if isAdmin() || (isSignedIn() && get(/databases/$(database)/documents/salons/$(salonId)).data.ownerId == request.auth.uid);
        allow create, update: if isAdmin() || (isSignedIn() && get(/databases/$(database)/documents/salons/$(salonId)).data.ownerId == request.auth.uid);
      }
    }

    match /bookings/{bookingId} {
      // Allow customers to list their own bookings
      allow list: if isSignedIn() && request.query.limit <= 100 && (
        request.auth.uid == resource.data.userId || 
        request.auth.uid == resource.data.salonOwnerId
      );
      // Fallback for admins
      allow list: if isAdmin();
      // Single doc access
      allow get: if isSignedIn() && (
        request.auth.uid == resource.data.userId || 
        request.auth.uid == resource.data.salonOwnerId ||
        isAdmin()
      );
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isSignedIn() && (
        request.auth.uid == resource.data.userId || 
        request.auth.uid == resource.data.salonOwnerId ||
        isAdmin()
      );
    }
  }
}