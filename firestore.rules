
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Global helpers
    function isSignedIn() { return request.auth != null; }
    function isAdmin() { 
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid)); 
    }

    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if isAdmin();
      allow create, update: if isSignedIn() && request.auth.uid == userId;
      allow delete: if isAdmin();
    }

    match /admins/{adminId} {
      allow get: if isSignedIn() && request.auth.uid == adminId;
    }

    match /salons/{salonId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if isAdmin() || (isSignedIn() && resource.data.ownerId == request.auth.uid);

      match /services/{serviceId} {
        allow get, list: if true;
        allow create, update, delete: if isAdmin() || (isSignedIn() && get(/databases/$(database)/documents/salons/$(salonId)).data.ownerId == request.auth.uid);
      }
    }

    match /bookings/{bookingId} {
      // Allow reading bookings if user is the customer or the salon owner
      // 'get' handles individual document access
      allow get: if isSignedIn() && (
        isAdmin() ||
        resource.data.userId == request.auth.uid || 
        resource.data.salonOwnerId == request.auth.uid
      );

      // 'list' handles collection-level queries with filters
      allow list: if isSignedIn() && (
        isAdmin() ||
        (request.query.filters.get('userId', []) == [request.auth.uid]) ||
        (request.query.filters.get('salonOwnerId', []) == [request.auth.uid])
      );
      
      allow create: if isSignedIn() && 
        request.resource.data.userId == request.auth.uid;
      
      allow update: if isSignedIn() && (
        isAdmin() ||
        resource.data.userId == request.auth.uid || 
        resource.data.salonOwnerId == request.auth.uid
      );
    }
  }
}
