
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Global helpers
    function isSignedIn() { return request.auth != null; }
    
    // Check if the user is an admin by checking the 'admins' collection
    function isAdmin() { 
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid)); 
    }

    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if isAdmin();
      allow create, update: if isSignedIn() && request.auth.uid == userId;
      allow delete: if isAdmin();
    }

    match /admins/{adminId} {
      allow get: if isSignedIn() && request.auth.uid == adminId;
    }

    match /salons/{salonId} {
      allow read: if true;
      
      // Owners can write their own data, but CANNOT change their own authorization status
      allow create: if isSignedIn() && (
        isAdmin() || 
        (request.resource.data.ownerId == request.auth.uid && request.resource.data.isAuthorized == false)
      );
      
      allow update: if isSignedIn() && (
        isAdmin() || 
        (
          resource.data.ownerId == request.auth.uid && 
          request.resource.data.isAuthorized == resource.data.isAuthorized
        )
      );

      allow delete: if isAdmin();

      match /services/{serviceId} {
        allow read: if true;
        allow write: if isAdmin() || (isSignedIn() && get(/databases/$(database)/documents/salons/$(salonId)).data.ownerId == request.auth.uid);
      }
    }

    match /bookings/{bookingId} {
      allow read: if isSignedIn() && (
        isAdmin() ||
        resource.data.userId == request.auth.uid || 
        resource.data.salonOwnerId == request.auth.uid
      );
      
      allow create: if isSignedIn() && 
        request.resource.data.userId == request.auth.uid;
      
      allow update: if isSignedIn() && (
        isAdmin() ||
        resource.data.userId == request.auth.uid || 
        resource.data.salonOwnerId == request.auth.uid
      );

      allow delete: if isAdmin();
    }
  }
}
